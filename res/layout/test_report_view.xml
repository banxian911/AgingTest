<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

  <LinearLayout
        android:id="@+id/report_setting_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/reboot_report"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/reboot_test"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/reboot_report_text"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/noTest"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/cpu_report"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/cpu_test"
                android:visibility="invisible"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cpu_report_text"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="@string/noTest"
                android:textSize="12sp" />
        </LinearLayout>

